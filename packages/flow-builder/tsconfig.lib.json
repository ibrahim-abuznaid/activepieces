{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "types": ["node"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "incremental": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
